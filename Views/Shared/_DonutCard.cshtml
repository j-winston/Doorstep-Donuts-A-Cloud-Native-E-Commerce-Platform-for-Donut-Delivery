@model Donut 

		<div class="col-md-4">
			<div class="card h-100">
			<img src="@Model.ImageThumbnailUrl" class="donut-thumbnail" alt="@Model.Name">
				<div class="card-body donut-button">
				<p class="d-grid long-description">@Model.LongDescription</p>
					
					<div class="d-flex justify-content-between mt-2">
						<h2 class="text-start">
							<a class="donut-link" asp-controller="Donut" asp-action="Details" asp-route-id="@Model.DonutId">@Model.Name</a>
						</h2>

						<h5 class="text-nowrap donut-price">
							@Model.Price.ToString("c")
						</h5>
					</div>
				</div>
			</div>
		</div>

